@page "/carpet" 
@inherits CarpetListBase

@if (Carpets != null)
{
    foreach (var Carpet in Carpets)
    {
        <div>
            <div><button @onclick="@(() => ShowCarpetModal(Carpet.Id))">@Carpet.Name</button></div>
            <div>@Carpet.Brand</div>
            <div>@Carpet.Style</div>
            <div>@Carpet.Description</div>
            <div>@Carpet.SquareYardPrice.ToString("$#.##")</div>
        </div>
        <br />
    }
}
else
{
    <span>Loading...</span>
}
