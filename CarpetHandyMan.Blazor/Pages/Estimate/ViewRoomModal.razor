@inherits ViewRoomModalBase

@if (Room != null)
{
    <div class="border-2 border-black rounded-md p-2">
        <div class="border-2 border-black rounded-md p-2">@Room.RoomName</div>
        <div>@Room.CarpetName</div>
        <div>Width: @Room.Width</div>
        <div>Length: @Room.Length</div>
        @foreach (var Closet in Closets)
        {
            <div class="border-2 border-black rounded-md p-2">
                <div class="text-lg font-semibold">Closet</div>
                <div>Length: @Closet.Length</div>
                <div>Width: @Closet.Width</div>
            </div>
            <br />
        }
    </div>
}