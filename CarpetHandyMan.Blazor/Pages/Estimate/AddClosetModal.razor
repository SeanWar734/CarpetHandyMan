@inherits AddClosetModalBase

@if (Closet != null)
{
    <EditForm Model="Closet" OnValidSubmit="(() => AddNewCloset(Closet))">

        <div class="p-2">
            <div class="border-2 rounded-md border-gray-700 bg-gray-200 p-2">
                <div class="text-2xl">Length</div>
                <div class="border-black">
                    <InputNumber @bind-Value="Closet.Length" />
                </div>
            </div>
        </div>
        <div class="p-2">
            <div class="border-2 rounded-md border-gray-700 bg-gray-200 p-2">
                <div class="text-2xl">Width</div>
                <div class="border-black">
                    <InputNumber @bind-Value="Closet.Width" />
                </div>
            </div>
        </div>
        <div class="p-2">
            <div class="border-2 rounded-md border-gray-700 bg-gray-200 p-2">
                @if (Carpet != null)
                {
                    <div class="text-2xl">Carpet</div>
                    <div class="border-black">
                        <InputSelect @bind-Value="Closet.CarpetId">
                            @foreach (var carpet in Carpet)
                                    {
                                <option value="@carpet.Id">@carpet.Name $@carpet.SquareYardPrice</option>
                                    }
                        </InputSelect>
                    </div>}
            </div>
        </div>
        <button class="float-right border-2 p-1 bg-gray-200 border-gray-700 rounded-md" type="submit">Add</button>
    </EditForm>
}
else
{
    <span>Loading...</span>
}